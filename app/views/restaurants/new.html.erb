<div class="container text_center">
  <%= link_to "Back home", restaurants_path%>
  <h1>Add a new restaurant</h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES, include_blank:  "Select a category" %>
    <%= f.button :submit  %>
  <% end %>
</div>
